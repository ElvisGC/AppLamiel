
@{
    
    Layout="_Layout";
}

@model Pedido
<link rel="stylesheet" href="~/css/estilos.css" />

<body class="fondo3">
<div class="row">
  
   <h1 style="text-align: center;">Pedido</h1>
  </div>
<div class="row" >



    
  <div class="col-md-5">
        <form asp-controller="Pedido" asp-action="Create">
                <div class="form-group" style="text-align: left;">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" type="text" required/>
                </div>   

                <div class="form-group" style="text-align: left;">
                    <label asp-for="Apellidos" class="control-label"></label>
                    <input asp-for="Apellidos" class="form-control"  type="text" required/>
                </div>               
                    
       <div class="row" >
  <div class="col-md-7">
                       <div class="form-group" style="text-align: left;">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" type="number" maxlength="9" required />
                </div>  
                <div class="form-group" style="text-align: left;">
                    <label asp-for="Email" class="control-label"></label>
                    <input type="email" required asp-for="Email" class="form-control"  />
                </div>  
  </div>
</div>

                <div  class="mb-3" style="text-align: left;" >
                    <label asp-for="Mensaje" class="control-label" >Detalles del pedido</label>
                    <textarea asp-for="Mensaje"  class="form-control "></textarea>
                </div>  

              
                    
                <div class="form-group"  >
                    <button type="submit" class="btn btn-primary" type="text" required>Enviar</button> 
                 </div>                

        </form>
     </div>
<div class="col-md-6" style="width: 100%;">
            <img src="~/img/pedido6.jpg" class="rounded mx-auto d-block" alt="...">
            </div>
        
   </div>
            
</div>


</body>





