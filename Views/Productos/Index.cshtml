@model IEnumerable<PasteleriaLaMiel.Models.Productos>

    


<h1> Lista de Productos</h1>

<p>
     
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
</p>
<table class="table" style="margin-left: 0%;">
    <thead class="thead-dark">
        <tr>
           
            <th>
                Nombre De la torta
            </th>

             <th>
        
            </th>
            
             <th>
                 S/.
                @Html.DisplayNameFor(model => model.Precio)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>

            <th scope="col">
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
         
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
                 
            <td>
   
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>


            <td>

                
                <a asp-action="Edit"    asp-route-id="@item.ID"class="btn btn-secondary" style="width: 30%;">Editar</a>
               <!-- <a asp-action="Details" asp-route-id="@item.ID"class="btn btn-secondary" style="width: 30%;;">Detalles</a> -->
                <a asp-action="Delete"  asp-route-id="@item.ID"class="btn btn-danger" style="width: 30%;">Borrar</a>
            </td>


            

          
        </tr>
}
    </tbody>
</table>


<p>
